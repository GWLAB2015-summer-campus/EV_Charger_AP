<ChipBox>:
    orientation: "vertical"
    adaptive_height: True
    padding: 0, 10, 0, 20
    MDLabel:
        text: self.parent.title
        font_style: "Title"
        size_hint: 1, None
        height: self.texture_size[1]
    MDStackLayout:
        id: chip_list
        size_hint: 1, None
        adaptive_height: True
        padding: 15, 15, 15, 5
        radius: "12dp"
        spacing: 10
        canvas.before:
            Color:
                rgba: app.theme_cls.outlineColor
            Line:
                width: 1
                rounded_rectangle: (self.x, self.y, self.width, self.height, dp(12))

