<LoadingView>:
    id: loading
    size_hint: None, None
    width: 800 * 0.65 + 10
    height: 450 - dp(80)
    pos: 10, 10
    radius: "12dp"
    md_bg_color: (0.2, 0.2, 0.2, 0.5)

    MDCircularProgressIndicator:
        size_hint: .5, .5
        pos_hint: {'center_x': .5, 'center_y': .5}